<?xml version="1.0" encoding="utf-8" ?>
<component name="GridScreen" extends="Group">
    <interface>
        <field id="content" type="node" onChange="OnContentChange" />
        <field id="rowItemFocused" type="array" alias="rowList.rowItemFocused" />
        <field id="rowItemSelected" type="array" alias="rowList.rowItemSelected" />
    </interface>
    <script type="text/brightscript" uri="GridScreen.brs" />

    <children>
        <!-- Dark background -->
        <Rectangle
            id="background"
            width="1920"
            height="1080"
            color="0x0D0D0DFF" />

        <!-- ===== HEADER BAR ===== -->
        <Group id="headerGroup" translation="[90, 22]">
            <Label
                id="appTitle"
                text="SepulnationTV"
                font="font:LargeBoldSystemFont"
                color="0x00D4FFFF" />
            <Label
                id="channelCount"
                text=""
                translation="[1640, 10]"
                font="font:SmallSystemFont"
                color="0x444444FF"
                horizAlign="right"
                width="100" />
        </Group>

        <!-- Header separator -->
        <Rectangle
            translation="[90, 62]"
            width="1740"
            height="1"
            color="0x1A1A1AFF" />

        <!-- ===== HERO BANNER ===== -->
        <Group id="heroGroup" translation="[0, 72]" visible="false">
            <Rectangle
                id="heroBg"
                width="1920"
                height="300"
                color="0x111111FF" />

            <!-- Accent stripe -->
            <Rectangle
                translation="[0, 0]"
                width="1920"
                height="2"
                color="0x00D4FF40" />

            <!-- Channel poster -->
            <Poster
                id="heroPoster"
                translation="[110, 50]"
                width="180"
                height="180"
                loadDisplayMode="scaleToFit"
                loadingBitmapOpacity="0.0"
                failedBitmapOpacity="0.0" />

            <!-- Accent line under poster -->
            <Rectangle
                translation="[110, 238]"
                width="180"
                height="3"
                color="0x00D4FFFF" />

            <!-- Channel info -->
            <Label
                id="heroChannelName"
                translation="[330, 60]"
                text=""
                font="font:LargeBoldSystemFont"
                color="0xEEEEEEFF"
                maxLines="2"
                width="900" />

            <Label
                id="heroCategory"
                translation="[330, 130]"
                text=""
                font="font:MediumSystemFont"
                color="0x666666FF"
                maxLines="1"
                width="600" />

            <!-- Live indicator -->
            <Group id="liveIndicator" translation="[330, 180]">
                <Rectangle
                    width="10"
                    height="10"
                    translation="[0, 7]"
                    color="0xFF3333FF" />
                <Label
                    text="AO VIVO"
                    translation="[18, 0]"
                    font="font:SmallBoldSystemFont"
                    color="0xFF3333FF" />
            </Group>

            <!-- Play hint -->
            <Label
                translation="[330, 225]"
                text="Pressione OK para assistir"
                font="font:SmallSystemFont"
                color="0x444444FF" />

            <!-- Bottom separator -->
            <Rectangle
                translation="[90, 292]"
                width="1740"
                height="1"
                color="0x1A1A1AFF" />
        </Group>

        <!-- ===== LOADING SPINNER ===== -->
        <LayoutGroup
            id="loadingGroup"
            translation="[860, 490]"
            horizAlignment="center"
            vertAlignment="center"
            itemSpacings="[20]">
            <BusySpinner
                id="spinner"
                visible="true"
                translation="[40, 0]" />
            <Label
                text="Carregando canais..."
                font="font:MediumSystemFont"
                color="0x555555FF" />
        </LayoutGroup>

        <!-- ===== CONTENT ROWS ===== -->
        <RowList
            id="rowList"
            translation="[90, 380]"
            itemComponentName="ChannelCard"
            numRows="2"
            itemSize="[1740, 270]"
            rowItemSize="[[300, 180]]"
            rowItemSpacing="[[20, 0]]"
            itemSpacing="[0, 30]"
            showRowLabel="[true]"
            rowLabelOffset="[[0, 12]]"
            rowLabelColor="0xAAAAAAFF"
            rowLabelFont="font:MediumBoldSystemFont"
            drawFocusFeedback="false"
            rowFocusAnimationStyle="floatingFocus"
            vertFocusAnimationStyle="floatingFocus"
            visible="false" />
    </children>
</component>
